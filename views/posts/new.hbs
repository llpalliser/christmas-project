<div class="container pt-5">

        <h1>New Post</h1>

        <form action="/new" method="POST">

            <div class="form-group mt-3">
                <label for="title">Title</label>
                <input name="title" type="text" class="form-control" id="title" placeholder="Enter title" value="">
            </div>

            <div class="form-group mt-3">
                <label for="image">Image</label>
                <input name="image" type="text" class="form-control" id="image" placeholder="Enter image" value="">
            </div>

            <div class="form-group mt-3">
                <label for="text">Text</label>
                <textarea name="text" type="text" class="form-control" id="text" placeholder="Enter post text"
                    rows="10"></textarea>
            </div>
        
            <button type="submit" class="btn btn-primary mt-3 mb-5">
                New Post
            </button>
            
        </form>

</div>
